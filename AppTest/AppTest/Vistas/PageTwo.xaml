<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppTest.Vistas.PageTwo">
    <StackLayout Orientation="Vertical">
        <StackLayout Padding="5">
            <Label Text="Manchabla" />
        </StackLayout>
        <Image Source="http://lorempixel.com/1920/1080/nature/3" />
        <StackLayout Orientation="Horizontal" Padding="3">
            <Button Text="Like" FontSize="10" TextColor="#127ac7" BackgroundColor="Transparent" />
            <Button Text="Comment" FontSize="10" TextColor="#127ac7" BackgroundColor="Transparent" />
            <Button Text="Share" FontSize="10" TextColor="#127ac7" BackgroundColor="Transparent" />
        </StackLayout>
        <StackLayout Padding="5">
            <BoxView HeightRequest="1" Color="#f0f0f0" />
            <Label Text="0 likes" FontAttributes="Bold" TextColor="#127ac7" />
            <Label Text="Cuando quieras quiero" TextColor="Gray" />
        </StackLayout>
    </StackLayout>
</ContentPage>